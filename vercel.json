{
  "version": 2,
  "builds": [
    {
      "src": "index.js",
      "use": "@now/node"
    }
  ],
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "index.js"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [{ "key": "Access-Control-Allow-Origin", "value": "*" }]
    },
    {
      "source": "/savee-api.vercel.app/(.*)",
      "headers": [{ "key": "Access-Control-Allow-Origin", "value": "*" }]
    }
  ],
  "functions": {
    "consumption/user/all": {
      "handler": "index.js",
      "events": [
        {
          "http": {
            "method": "post",
            "path": "/consumption/user/all"
          }
        }
      ]
    }
  },
  "crons": [
    {
      "name": "consume-routine",
      "command": "curl -X POST https://savee-api.vercel.app/consumption/user/all",
      "schedule": "1 0,12,19 * * *"
    }
  ]
}
